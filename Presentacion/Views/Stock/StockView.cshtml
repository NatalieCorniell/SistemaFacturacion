@section scripts{
    <script>
        function AddData() {
            $.post("@Url.Action("Agregar", "Stock")",
                function (data) {
                    $('.modal-body').html(data);
                });
            $("#modal").modal("show");
        }
        function EditData(model) {
            $.post("@Url.Action("Editar", "Stock")/" + model,
                function (data) {
                    $('.modal-body').html(data);
                });
            $("#modal").modal("show");
        }

        function Delete(ID) {
            $.post("@Url.Action("Eliminar", "Stock")/" + ID,
                function (data) {
                   $('.modal-body').html(data);
                });
            $("#modal").modal("hide");
        }
        //Taking by ID
          function GetbyID(ID) {
              $.get("@Url.Action("GetID", "Stock")/" + ID,
                function (data) {
                    $('.modal-body').html(data);
                });
              $("#modal").modal("show");
        }
         function GetbyDelID(ID) {
              $.get("@Url.Action("EliminarID", "Stock")/" + ID,
                function (data) {
                    $('.modal-body').html(data);
                });
             $("#modal").modal("show");
        }

    </script>
}