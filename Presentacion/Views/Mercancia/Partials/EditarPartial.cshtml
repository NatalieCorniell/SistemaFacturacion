@model C_Datos.TProducto


    @using (Html.BeginForm("Editar", "Mercancia", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()

        <form>
            <div class="modal-header">
                <h4 class="modal-title">Editar PRoducto</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @Html.HiddenFor(model => model.Id_Producto, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = "true" } })
                </div>
                <div class="form-group">
                    <label class="editor-label">Nombre</label>
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = "true" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Precio</label>
                    @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control", @type = "text", @required = "true" } })
                    @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                <input type="submit" value="Guardar" id="@Model" class="btn btn-info" onclick="EditData(this.id);" />

            </div>
        </form>
    }
